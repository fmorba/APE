<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:weightSum="5">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crear_planificacion"
        android:layout_weight="1"
        android:background="#AED6F1"
        android:id="@+id/btnIniciarPlanificacion"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/titulo"
        android:id="@+id/imageLogoPlanificador"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#AED6F1"
        android:text="@string/revisar_planificacion"
        android:id="@+id/btnRevisarPlanificacion"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#AED6F1"
        android:text="@string/revisar_planificaciones_antiguas"
        android:id="@+id/btnRevisarPlanesAntiguos"/>

</LinearLayout>