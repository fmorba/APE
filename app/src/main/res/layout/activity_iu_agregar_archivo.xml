<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:weightSum="4">


    <ImageButton
        android:id="@+id/boton_agregar_foto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:gravity="center"
        android:background="@drawable/ani_boton"
        android:src="@drawable/ic_archivo_foto" />

    <ImageButton
        android:id="@+id/boton_agregar_audio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/ani_boton"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_archivo_audio" />


    <ImageButton
        android:id="@+id/boton_agregar_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:gravity="center"
        android:background="@drawable/ani_boton"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_archivo_video" />

    <ImageButton
        android:id="@+id/boton_agregar_nota"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:gravity="center"
        android:background="@drawable/ani_boton"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_archivo_nota" />

</LinearLayout>